{{#partial "metadata"}}{{/partial}}
{{#partial "content"}}{{/partial}}

{{#each squads}}
    <div class="container text-center">

        {{#if heros}}
            <h1>Super Heros!</h1>
            <p><a class="btn btn-outline-primary" href="/heros/new">+ Add New Hero</a> </p>

           <div class="d-flex row">
<!--               <div class="row ">-->
                   <div class="row justify-content-between">
                       {{#each heros}}

                           <div class="card" style="width: 18rem;">
                               <h5 class="card-title pt-1"> {{heroName}} </h5>
                               <img class="card-img-top pt-2" src="{{avatarUrl}}" alt="Card image cap" height="200px" width="200px">
                               <div class="card-body">
                                   <p class="card-text"><a href="/squads/{{squadId}}">Hero Squad: {{squadName}}</a></p>
                                   <a href="squads/{{squadId}}/heros/{{id}}" class="btn btn-primary"> Spy On {{heroName}} </a>
                               </div>
                           </div>

                       {{/each}}
                   </div>
<!--               </div>-->

           </div>
        {{else}}
            <p>Ooops!, Thanos Wiped All heroes :( </p>
            <p><a href="/heros/new">Add A New Hero</a> </p>
        {{/if}}

    </div>

{{/each}}

{{#partial "footer"}}{{/partial}}

{{> "layout.hbs"}}