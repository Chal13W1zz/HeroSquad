<div class="container form-control">
    <h1 class="text-center">Add a new Squad.</h1>
    <form action="/squads" method="post">
        <label for="squadName">Squad Name:</label>
        <input type="text" id="squadName" name="squadName">

        <label for="squadCause">Squad Cause:</label>
        <input type="text" id="squadCause" name="squadCause">

        <label for="maxSize">Squad Maximum Size:</label>
        <input type="number" name="maxSize" id="maxSize">

        <button class="btn btn-outline-primary" type="submit">+ Add Squad</button>
    </form>
</div>

